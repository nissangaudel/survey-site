<%- include ('../partials/header') %>
    <nav class="navbar navbar-expand bg-light sticky-top">
        <div class="container">
            <a class="navbar-brand ms-5" href="/">
                <img src="/img/logo.png" alt="Bootstrap" width="150">
            </a>
            <div class="d-flex me-5">
                <a class="btn btn-sm btn-outline-danger ms-2" role="button" href="/surveys"><i
                        class="fa-solid fa-xmark"></i>
                    Quit</a>
            </div>
        </div>
    </nav>

    <div class="container mt-5 w-75">
        <div class="progress" style="height: 5px;">
            <div class="progress-bar bg-info" role="progressbar" style="width: 50%;" aria-valuenow="50"
                aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <h1 class=" mt-5 display-5">Choose one survey template:</h1>
    </div>

    <form action="/select_survey" method="POST">
        <div class="container w-75">
            <div class="row align-items-center">
                <div class="container mt-5 col">
                    <div class="card text-left" aria-hidden="true">
                        <div class="card-header">
                            posted by: user456
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fs-3">QNA Survey</h5>
                            <div class="mb-3">
                                <textarea class="form-control mt-3" disabled id="exampleFormControlTextarea1" rows="2"
                                    placeholder="Enter Your Response here...."></textarea>
                            </div>
                            <a href="#" class="btn btn-secondary disabled" href="#">Submit</a>
                        </div>
                        <div class="card-footer text-muted">
                            Expires 4:00 PM
                        </div>
                    </div>
                </div>
                <div class="container mt-4 col">
                    <div class="card text-left">
                        <div class="card-header">
                            posted by: user456
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fs-3">MCQ Survey</h5>
                            <select class="form-select mt-3 mb-3" disabled size="3">
                                <option>Selected</option>
                                <option value="1">Lorem</option>
                                <option value="1">Ipsum</option>

                            </select>
                            <a href="#" class="btn btn-secondary disabled" href="#">Submit</a>
                        </div>
                        <div class="card-footer text-muted">
                            Expires 4:00 PM
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center text-center mt-4">
                <div class="form-check-inline col m-auto">
                    <input class="form-check-input" type="radio" name="type" id="QNA" value="QNA" checked>
                    <label class="form-check-label" for="QNA">
                        QNA
                    </label>
                </div>
                <div class="form-check-inline col m-auto">
                    <input class="form-check-input" type="radio" name="type" id="MCQ" value="MCQ">
                    <label class="form-check-label" for="MCQ">
                        MCQ
                    </label>
                </div>
            </div>
        </div>
        <nav class="navbar fixed-bottom">
            <div class="container">
                <a class="navbar-brand ms-5" href="/">
                </a>
                <div class="d-flex me-5 mb-4">
                    <button class="btn btn-sm btn-primary ms-2" type="submit">Next <i
                            class="fa-solid fa-arrow-right-long"></i></button>
                </div>
            </div>
        </nav>
    </form>

    <%- include ('../partials/footer') %>