<%- include ('../partials/header') %>
    <nav class="navbar navbar-expand bg-light sticky-top">
        <div class="container">
            <a class="navbar-brand ms-5" href="/">
                <img src="/img/logo.png" alt="Bootstrap" width="150">
            </a>
            <div class="d-flex me-5">
                <div class="dropdown-center">
                    <a class="btn btn-sm btn-outline-primary dropdown-toggle" role="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <i class="fa-regular fa-user"></i>
                        <%= currentUser.name %>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" role="button" href="/select_survey">
                                <i class="fa-solid fa-plus"></i> New Survey</a></li>
                        <li><a class="dropdown-item" href="/user_surveys/?email=<%=currentUser.email%>" role="button"><i
                                    class="fa-solid fa-square-poll-vertical"></i> Analytics</a></li>
                        <li><a class="dropdown-item" href="/user/logout" role="button"><i
                                    class="fa-solid fa-right-from-bracket"></i> Log Out</a></li>
                    </ul>
                </div>
            </div>
    </nav>
    <div class="container w-50">
        <%- include ('../partials/messages') %>
            <h2 class="mt-4 fs-1 fw-lighter text-primary">My Surveys</h2>
            <caption class="fw-light">These are the survey you have created:</caption>
    </div>
    <div class="container w-50 mt-3">

        <% for(let count=0; count < surveys.length; count++) { %>
            <div class="card mt-4">
                <div class="card-header">
                    <a class="btn btn-light" href="/edit/?id=<%= surveys[count]._id %> " role="button"><i
                            class="fa-solid fa-pencil"></i> Edit</a>
                    <a class="btn btn-outline-danger" href="/delete/<%= surveys[count]._id %> " role="button"><i
                            class="fa-solid fa-trash-can"></i></a>
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        <%= surveys[count].title %>
                    </h5>
                    <p class="card-text text-muted">Created: <%= surveys[count].created.slice(0,10) %>
                    </p>
                    <a href="/analytics/?id=<%= surveys[count]._id%> " class="btn btn-primary"><i
                            class="fa-solid fa-circle-info"></i> View
                        Analytics</a>
                </div>
            </div>
            <% } %>
    </div>
    <%- include ('../partials/footer') %>